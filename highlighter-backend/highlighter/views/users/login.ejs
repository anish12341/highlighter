<html>
  <head>
      <link rel="stylesheet" href="/stylesheets/users/login-signup.css">
  </head>
  <body>
    <div class="login-page">
      <% if(iserror){ %>
        <span id="errormessage"><%= errorMessage%></span> 
      <% } %>    
      <div class="form">
        <form class="login-form" method="POST">
          <input type="text" name="email" placeholder="username" required/>
          <input type="password" name="password" placeholder="password"required/>
          <input id='submit' type="submit" value="login"/>
          <p class="message">Not registered? <a id="login_signup_link" href="/users/signup">Create an account</a></p>
          <p class="message">Trouble Signing in..<a id="forgot_password_link" href="/users/forgot-password">Forgot password?</a></p>
        </form>
      </div>  
    </div>
  </body>
</html>